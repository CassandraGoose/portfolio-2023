---
import Layout from "../layouts/Layout.astro";
import About from "../components/AboutCard.astro";
import Intro from "../components/IntroCard.astro";
import Skills from "../components/SkillsCard.astro";
import Projects from "../components/ProjectsCard.astro";
import PersonalProjects from "../components/PersonalProjectsCard.astro";
import Work from "../components/WorkCard.astro";
import Education from "../components/EducationCard.astro";
import Volunteering from "../components/VolunteeringCard.astro";
import Community from "../components/CommunityCard.astro";
---

<Layout title="CASS">
  <main class="grid md:grid-cols-2 text-xl lg:mt-8 lg:mx-16 mt-4 relative z-50">
    <div>
      <Intro />
      <section>
        <About />
        <Skills />
        <Community />
        <Education />
      </section>
    </div>

    <section class="lg:mx-4 lg:my-16 flex flex-col">
      <Work />
      <Volunteering />
      <Projects />
      <PersonalProjects />
    </section>
  </main>
</Layout>
